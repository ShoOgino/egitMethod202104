		@Override
		public long getLength() {
			if (length < 0)
				if (rsrc instanceof IFile || fileMode == FileMode.SYMLINK
						|| fileMode == FileMode.GITLINK) {
					try {
						File file = asFile();
						if (file != null)
							length = FS.DETECTED.length(file);
						else
							length = 0;
					} catch (IOException e) {
						length = 0;
					}
				} else
					length = 0;
			return length;
		}

