	/**
	 * Create and add diff style range
	 *
	 * @param type
	 *            the {@link Type}
	 * @param start
	 *            start offset
	 * @param end
	 *            end offset
	 * @return added range
	 */
	protected DiffRegion addRegion(Type type, int start, int end) {
		DiffRegion range = new DiffRegion(start, end - start, type);
		regions.add(range);
		return range;
	}

