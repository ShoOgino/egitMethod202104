	void refresh() {
		if (!isReady())
			return;
		asyncExec(new Runnable() {
			public void run() {
				Tree t = planTreeViewer.getTree();
				if (t.isDisposed())
					return;
				t.setRedraw(false);
				try {
					planTreeViewer.setInput(currentPlan);
					refreshUI();
				} finally {
					t.setRedraw(true);
				}
			}
		});

	}

