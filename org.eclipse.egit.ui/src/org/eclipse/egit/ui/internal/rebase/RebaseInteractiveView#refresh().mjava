	void refresh() {
		if (!isReady())
			return;
		asyncExec(new Runnable() {
			public void run() {
				planTreeViewer.getTree().setRedraw(false);
				try {
					planTreeViewer.setInput(currentPlan);
					refreshUI();
				} finally {
					planTreeViewer.getTree().setRedraw(true);
				}
			}
		});

	}

