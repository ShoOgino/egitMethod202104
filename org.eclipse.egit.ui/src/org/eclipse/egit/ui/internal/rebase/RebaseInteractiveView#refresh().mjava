	void refresh() {
		if (!isReady())
			return;
		asyncExec(new Runnable() {
			@Override
			public void run() {
				Tree t = planTreeViewer.getTree();
				if (t.isDisposed())
					return;
				t.setRedraw(false);
				try {
					planTreeViewer.setInput(currentPlan);
					refreshUI();
					// Force a selection changed event
					planTreeViewer.setSelection(planTreeViewer.getSelection());
				} finally {
					t.setRedraw(true);
				}
			}
		});

	}

