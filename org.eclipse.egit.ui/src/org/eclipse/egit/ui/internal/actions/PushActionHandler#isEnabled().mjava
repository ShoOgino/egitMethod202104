	@Override
	public boolean isEnabled() {
		try {
			Repository repository = getRepository();
			if (repository == null) {
				return false;
			}
			Ref ref = repository.getRef(Constants.HEAD);
			return ref != null && ref.getObjectId() != null;
		} catch (IOException e) {
			Activator.handleError(e.getMessage(), e, false);
			return false;
		}
	}

