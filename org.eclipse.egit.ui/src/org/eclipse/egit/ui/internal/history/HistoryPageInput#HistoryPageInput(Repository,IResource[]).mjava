	/**
	 * @param repository
	 *            the {@link Repository}
	 * @param resourceItems
	 *            the resources
	 */
	public HistoryPageInput(final Repository repository,
			final IResource[] resourceItems) {
		this.repo = repository;
		list = resourceItems;
		if (resourceItems.length == 1
				&& resourceItems[0].getType() == IResource.FILE)
			singleFile = resourceItems[0];
		else
			singleFile = null;
		files = null;
	}

