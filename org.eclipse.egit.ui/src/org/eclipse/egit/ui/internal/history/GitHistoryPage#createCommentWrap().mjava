				UIPreferences.RESOURCEHISTORY_SHOW_COMMENT_WRAP,
				UIText.ResourceHistory_toggleCommentWrap) {
			void apply(boolean wrap) {
				// nothing, just set the Preference
			}
		};
		a.apply(a.isChecked());
		actionsToDispose.add(a);
		return a;
	}

