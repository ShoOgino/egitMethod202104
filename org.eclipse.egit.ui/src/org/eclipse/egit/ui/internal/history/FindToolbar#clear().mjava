	/**
	 * Clears the toolbar.
	 */
	void clear() {
		if (!isDisposed()) {
			patternField.setBackground(null);
			if (patternField.getText().length() > 0) {
				patternField.selectAll();
			}
		}
		lastErrorPattern = null;

		if (job != null) {
			job.cancel();
			job = null;
		}

		findResults.clear();
	}

