	/**
	 * Refresh the unstaged and staged viewers without preserving expanded
	 * elements
	 */
	public void refreshViewers() {
		syncExec(new Runnable() {
			@Override
			public void run() {
				setRedraw(false);
				try {
					refreshViewersInternal();
				} finally {
					setRedraw(true);
				}
			}
		});
	}

